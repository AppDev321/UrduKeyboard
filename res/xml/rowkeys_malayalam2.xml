<merge
    xmlns:latin="http://schemas.android.com/apk/res-auto"
>
    <switch>
        <case latin:keyboardLayoutSetElement="alphabetManualShifted|alphabetShiftLocked|alphabetShiftLockShifted"
        >

            <!-- അ, ആ -->
            <Key
                latin:keySpec="&#x0D05;"
                latin:moreKeys="&#x0D06;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!-- ഷ, ക്ഷ -->
            <Key
                latin:keySpec="&#x0D37;"
                latin:moreKeys="&#x0D15;&#x0D4D;&#x0D37;"
                latin:keyLabelFlags="fontNormal" />
            <!-- ധ, ഢ -->
            <Key
                latin:keySpec="&#x0D27;"
                latin:moreKeys="&#x0D22;"
                latin:keyHintLabel="&#x0D22;"
                latin:keyLabelFlags="fontNormal" />
            <!-- ഫ -->
            <Key
                latin:keySpec="&#x0D2B;"
                latin:keyLabelFlags="fontNormal" />
            <!-- ഘ -->
            <Key
                latin:keySpec="&#x0D18;"
                latin:keyLabelFlags="fontNormal" />
            <!-- ഃ -->
            <Key
                latin:keySpec="&#x0D03;"
                latin:keyLabelFlags="fontNormal" />
            <!-- ഝ -->
            <Key
                latin:keySpec="&#x0D1D;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!-- ഖ -->
            <Key
                latin:keySpec="&#x0D16;"
                latin:keyLabelFlags="fontNormal" />
            <!-- ള, ള്ള, ള്‍ -->
            <Key
                latin:keySpec="&#x0D33;"
                latin:moreKeys="&#x0D33;&#x0D4D;&#x0D33;,&#x0D33;&#x0D4D;&#x200D;"
                latin:keyLabelFlags="fontNormal" />
        </case>

        <default>
            <!-- ാ, ആ -->
            <Key
                latin:keySpec="&#x0D3E;"
                latin:moreKeys="&#x0D06;"
                latin:keyHintLabel="&#x0D06;"
                latin:keyLabelFlags="fontNormal" />
            <!-- സ, സ്സ -->
            <Key
                latin:keySpec="&#x0D38;"
                latin:moreKeys="&#x0D38;&#x0D4D;&#x0D38;"
                latin:keyLabelFlags="fontNormal" />
            <!-- ദ, ഡ, ഡ്ഡ, ദ്ദ -->
            <Key
                latin:keySpec="&#x0D26;"
                latin:moreKeys="&#x0D21;,&#x0D21;&#x0D4D;&#x0D21;,&#x0D26;&#x0D4D;&#x0D26;"
                latin:keyHintLabel="&#x0D21;"
                latin:keyLabelFlags="fontNormal" />
            <!-- ഫ -->
            <Key
                latin:keySpec="&#x0D2B;"
                latin:keyLabelFlags="fontNormal" />
            <!-- ഗ, ഗ്ഗ -->
            <Key
                latin:keySpec="&#x0D17;"
                latin:moreKeys="&#x0D17;&#x0D4D;&#x0D17;"
                latin:keyLabelFlags="fontNormal" />
            <!-- ഹ -->
            <Key
                latin:keySpec="&#x0D39;"
                latin:keyLabelFlags="fontNormal" />
            <!-- ജ, ജ്ജ -->
            <Key
                latin:keySpec="&#x0D1C;"
                latin:moreKeys="&#x0D1C;&#x0D4D;&#x0D1C;"
                latin:keyLabelFlags="fontNormal" />
            <!-- ക, ക്ക, ക്‍ , ങ്ക-->
            <Key
                latin:keySpec="&#x0D15;"
                latin:moreKeys="&#x0D15;&#x0D4D;&#x0D15;,&#x0d15;&#x0D4D;&#x200D;,&#x0D19;&#x0D4D;&#x0D15;"
                latin:keyLabelFlags="fontNormal" />
            <!-- ല, ല്‍, ല്ല -->
            <Key
                latin:keySpec="&#x0D32;"
                latin:moreKeys="&#x0D32;&#x0D4D;&#x200D;,&#x0D32;&#x0D4D;&#x0D32;"
                latin:keyHintLabel="&#x0D32;&#x0D4D;&#x200D;"
                latin:keyLabelFlags="fontNormal" />
         </default>
    </switch>
</merge>
