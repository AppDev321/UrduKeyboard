<merge
    xmlns:latin="http://schemas.android.com/apk/res-auto"
>
    <switch>
        <case
            latin:keyboardLayoutSetElement="alphabetManualShifted|alphabetShiftLocked|alphabetShiftLockShifted"
        >
            <!---Z எ TAMIL LETTER E-->
            <Key
                latin:keySpec="&#x0B8E;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <Key latin:keySpec="&#x0020;" />

            <!---C ண TAMIL LETTER NNA-->
            <Key
                latin:keySpec="&#x0BA3;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio|autoXScale" />

            <!---V ன TAMIL LETTER NNNA-->
            <Key
                latin:keySpec="&#x0BA9;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!---B ழ TAMIL LETTER LLLA-->
            <Key
                latin:keySpec="&#x0BB4;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!---N ள TAMIL LETTER LLA-->
            <Key
                latin:keySpec="&#x0BB3;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!---M ஶ TAMIL LETTER SHA-->
            <Key
                latin:keySpec="&#x0BB6;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!---< ஷ TAMIL LETTER SSA-->
            <Key
                latin:keySpec="&#x0BB7;"
                latin:moreKeys="&lt;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <Key
                latin:keySpec="&gt;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <Key
                latin:keySpec="\?"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
        </case>

        <default>
            <!---z ெ TAMIL VOWEL SIGN E-->
            <Key
                latin:keySpec="&#x0BC6;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <Key latin:keySpec="&#x0020;" />

            <!---c ம TAMIL LETTER MA-->
            <Key
                latin:keySpec="&#x0BAE;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!---v ந TAMIL LETTER NA-->
            <Key
                latin:keySpec="&#x0BA8;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!---b வ TAMIL LETTER VA-->
            <Key
                latin:keySpec="&#x0BB5;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!---n ல TAMIL LETTER LA-->
            <Key
                latin:keySpec="&#x0BB2;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!---m ஸ TAMIL LETTER SA-->
            <Key
                latin:keySpec="&#x0BB8;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <Key
                latin:keySpec=","
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <Key
                latin:keySpec="."
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!---/ ய TAMIL LETTER YA-->
            <Key
                latin:keySpec="&#x0BAF;"
                latin:moreKeys="/"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
         </default>
    </switch>
</merge>
