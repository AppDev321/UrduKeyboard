<merge
    xmlns:latin="http://schemas.android.com/apk/res-auto"
>
    <switch>
        <case latin:keyboardLayoutSetElement="alphabetManualShifted|alphabetShiftLocked|alphabetShiftLockShifted"
        >
            <!--A ও BENGALI LETTER O-->
            <Key
                latin:keySpec="&#x0993;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--S এ BENGALI LETTER E-->
            <Key
                latin:keySpec="&#x098F;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--D অ BENGALI LETTER A-->
            <Key
                latin:keySpec="&#x0985;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--F ই BENGALI LETTER I-->
            <Key
                latin:keySpec="&#x0987;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--G উ BENGALI LETTER U-->
            <Key
                latin:keySpec="&#x0989;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--H ফ BENGALI LETTER PHA-->
            <Key
                latin:keySpec="&#x09AB;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--J ৎ BENGALI LETTER KHANDA TA-->
            <Key
                latin:keySpec="&#x09CE;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--K খ BENGALI LETTER KHA-->
            <Key
                latin:keySpec="&#x0996;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--L থ BENGALI LETTER THA-->
            <Key
                latin:keySpec="&#x09A5;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--\: ছ BENGALI LETTER CHA-->
            <Key
                latin:keySpec="&#x099B;"
                latin:moreKeys=":"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--" ঠ BENGALI LETTER TTHA-->
            <Key
                latin:keySpec="&#x09A0;"
                latin:moreKeys="&quot;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
        </case>

        <default>
            <!--a ো BENGALI VOWEL SIGN O-->
            <Key
                latin:keySpec="&#x09CB;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--s ে BENGALI VOWEL SIGN E-->
            <Key
                latin:keySpec="&#x09C7;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--d ্ BENGALI SIGN VIRAMA-->
            <Key
                latin:keySpec="&#x09CD;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--f ি BENGALI VOWEL SIGN I-->
            <Key
                latin:keySpec="&#x09BF;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--g ু BENGALI VOWEL SIGN U-->
            <Key
                latin:keySpec="&#x09C1;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--h প BENGALI LETTER PA-->
            <Key
                latin:keySpec="&#x09AA;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--j ৰ BENGALI LETTER RA WITH MIDDLE DIAGONAL-->
            <Key
                latin:keySpec="&#x09F0;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--k ক BENGALI LETTER KA-->
            <Key
                latin:keySpec="&#x0995;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--l ত BENGALI LETTER TA-->
            <Key
                latin:keySpec="&#x09A4;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--\; চ BENGALI LETTER CA-->
            <Key
                latin:keySpec="&#x099A;"
                latin:moreKeys=";"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--' ট BENGALI LETTER TTA-->
            <Key
                latin:keySpec="&#x099F;"
                latin:moreKeys="'"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
         </default>
    </switch>
</merge>
