<merge
    xmlns:latin="http://schemas.android.com/apk/res-auto"
 >
    <switch>
        <case
            latin:keyboardLayoutSetElement="alphabetManualShifted|alphabetShiftLocked|alphabetShiftLockShifted"
            >
            <!-- MYANMAR LETTER JHA -->
            <Key
                latin:keySpec="&#x1008;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!-- MYANMAR LETTER WA -->
            <Key
                latin:keySpec="&#x101D;"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER I -->
            <Key
                latin:keySpec="&#x1023;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!-- MYANMAR LETTER I -->
            <Key
                latin:keySpec="&#x104E;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!-- MYANMAR SYMBOL AFOREMENTIONED -->
            <Key
                latin:keySpec="&#x1024;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!-- MYANMAR LETTER II -->
            <Key
                latin:keySpec="&#x104C;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!-- MYANMAR LETTER U -->
            <Key
                latin:keySpec="&#x1025;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!-- MYANMAR SYMBOL COMPLETED -->
            <Key
                latin:keySpec="&#x104D;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!-- MYANMAR LETTER GREAT SA -->
            <Key
                latin:keySpec="&#x103F;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!-- MYANMAR LETTER NNA -->
            <Key
                latin:keySpec="&#x100F;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!-- MYANMAR LETTER E -->
            <Key
                latin:keySpec="&#x1027;"
                latin:moreKeys="("
                latin:keyHintLabel="("
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER AU -->
            <Key
                latin:keySpec="&#x102A;"
                latin:moreKeys=")"
                latin:keyHintLabel=")"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio|autoXScale" />
        </case>

        <default>
            <!-- MYANMAR LETTER CHA -->
            <Key
                latin:keySpec="&#x1006;"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER TA
                 MYANMAR LETTER TTA -->
            <Key
                latin:keySpec="&#x1010;"
               latin:moreKeys="&#x100B;"
               latin:keyHintLabel="&#x100B;"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER NA -->
            <Key
                latin:keySpec="&#x1014;"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER MA -->
            <Key
                latin:keySpec="&#x1019;"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER A -->
            <Key
                latin:keySpec="&#x1021;"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER PA -->
            <Key
                latin:keySpec="&#x1015;"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER KA -->
            <Key
                latin:keySpec="&#x1000;"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER NGA -->
            <Key
                latin:keySpec="&#x1004;"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER SA -->
            <Key
                latin:keySpec="&#x101E;"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER CA -->
            <Key
                latin:keySpec="&#x1005;"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER HA -->
            <Key
                latin:keySpec="&#x101F;"
                latin:moreKeys=")"
                latin:keyHintLabel=")"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER O -->
            <Key
                latin:keySpec="&#x1029;"
                latin:moreKeys="("
                latin:keyHintLabel="("
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
        </default>
    </switch>
</merge>
