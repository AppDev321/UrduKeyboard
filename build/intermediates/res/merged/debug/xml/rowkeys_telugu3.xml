<merge
    xmlns:latin="http://schemas.android.com/apk/res-auto"
 >
    <switch>
        <case
            latin:keyboardLayoutSetElement="alphabetManualShifted|alphabetShiftLocked|alphabetShiftLockShifted"
            >
            <!-- // Z: nya, nga -->
            <Key
                latin:keySpec="&#x0C19;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keySpec="&#x0C1B;"
                latin:keyLabelFlags="fontNormal" />
            <!-- V: va, matra au, au -->
            <Key
                latin:keySpec="&#x0C4C;"
                latin:keyLabelFlags="fontNormal" />
            <!-- // B: ba, bha -->
            <Key
                latin:keySpec="&#x0C2D;"
                latin:keyLabelFlags="fontNormal" />
            <!-- N: na, nna -->
            <Key
                latin:keySpec="&#x0C23;"
                latin:keyLabelFlags="fontNormal" />
            <!-- M: ma, anusvara, avagraha, Devanagari OM -->
            <Key
                latin:keySpec="&#x0C02;"
                latin:moreKeys="&#x0950;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keySpec="&#x0C58;"
                latin:keyLabelFlags="fontNormal" />
        </case>

        <default>
            <Key
                latin:keySpec="&#x0C1E;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keySpec="&#x0C37;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keySpec="&#x0C1A;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keySpec="&#x0C35;"
                latin:moreKeys="&#x0C14;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keySpec="&#x0C2C;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keySpec="&#x0C28;"
                latin:keyLabelFlags="fontNormal" />
            <Key
                latin:keySpec="&#x0C2E;"
                latin:keyLabelFlags="fontNormal" />

        </default>
    </switch>
</merge>
