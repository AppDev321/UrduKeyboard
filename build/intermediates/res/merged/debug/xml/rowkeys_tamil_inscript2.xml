<merge
    xmlns:latin="http://schemas.android.com/apk/res-auto"
>
    <switch>
        <case latin:keyboardLayoutSetElement="alphabetManualShifted|alphabetShiftLocked|alphabetShiftLockShifted"
        >
            <!---Q ஔ TAMIL LETTER AU-->
            <Key
              latin:keySpec="&#x0B94;"
              latin:keyLabelFlags="fontNormal|followKeyLetterRatio|autoXScale" />

            <!---W ஐ TAMIL LETTER AI-->
            <Key
              latin:keySpec="&#x0B90;"
              latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!---E ஆ TAMIL LETTER AA-->
            <Key
              latin:keySpec="&#x0B86;"
              latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!---R ஈ TAMIL LETTER II-->
            <Key
              latin:keySpec="&#x0B88;"
              latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!---T ஊ TAMIL LETTER UU-->
            <Key
              latin:keySpec="&#x0B8A;"
              latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <Key latin:keySpec="&#x0020;" />

            <!---U ங TAMIL LETTER NGA-->
            <Key
              latin:keySpec="&#x0B99;"
              latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <Key latin:keySpec="&#x0020;" />

            <Key latin:keySpec="&#x0020;" />

            <Key latin:keySpec="&#x0020;" />

            <Key
                latin:keySpec="{"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!---\} ஞ TAMIL LETTER NYA-->
            <Key
                latin:keySpec="&#x0B9E;"
                latin:moreKeys="}"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <Key
                latin:keySpec="|"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
        </case>

        <default>
            <!---q ௌ TAMIL VOWEL SIGN AU-->
            <Key
                latin:keySpec="&#x0BCC;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio|autoXScale" />

            <!---w ை TAMIL VOWEL SIGN AI-->
            <Key
                latin:keySpec="&#x0BC8;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio|autoXScale" />

            <!---e ா TAMIL VOWEL SIGN AA-->
            <Key
                latin:keySpec="&#x0BBE;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!---r ீ TAMIL VOWEL SIGN II-->
            <Key
                latin:keySpec="&#x0BC0;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!---t ூ TAMIL VOWEL SIGN UU-->
            <Key
                latin:keySpec="&#x0BC2;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <Key latin:keySpec="&#x0020;" />

            <!---u ஹ TAMIL LETTER HA-->
            <Key
                latin:keySpec="&#x0BB9;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio|autoXScale" />

            <Key latin:keySpec="&#x0020;" />

            <Key latin:keySpec="&#x0020;" />

            <!---p ஜ TAMIL LETTER JA-->
            <Key
                latin:keySpec="&#x0B9C;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <Key
                latin:keySpec="["
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <Key
                latin:keySpec="]"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <Key
                latin:keySpec="\\"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
         </default>
    </switch>
</merge>
