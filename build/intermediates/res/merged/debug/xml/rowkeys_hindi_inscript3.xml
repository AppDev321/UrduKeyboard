<merge
    xmlns:latin="http://schemas.android.com/apk/res-auto"
>
    <switch>
        <case latin:keyboardLayoutSetElement="alphabetManualShifted|alphabetShiftLocked|alphabetShiftLockShifted"
        >
            <!--A ओ DEVANAGARI LETTER O-->
            <Key
                latin:keySpec="&#x0913;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--S ए DEVANAGARI LETTER E-->
            <Key
                latin:keySpec="&#x090F;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--D अ DEVANAGARI LETTER A-->
            <Key
                latin:keySpec="&#x0905;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--F इ DEVANAGARI LETTER I-->
            <Key
                latin:keySpec="&#x0907;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--G उ DEVANAGARI LETTER U-->
            <Key
                latin:keySpec="&#x0909;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--H फ DEVANAGARI LETTER PHA-->
            <Key
                latin:keySpec="&#x092B;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--J DEVANAGARI LETTER RRA -->
            <Key
                latin:keySpec="&#x0931;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--K ख DEVANAGARI LETTER KHA-->
            <Key
                latin:keySpec="&#x0916;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--L थ DEVANAGARI LETTER THA-->
            <Key
                latin:keySpec="&#x0925;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--\: छ DEVANAGARI LETTER CHA-->
            <Key
                latin:keySpec="&#x091B;"
                latin:moreKeys=":"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <Key
                latin:keySpec="&#x0920;"
                latin:moreKeys="&quot;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
        </case>

        <default>
            <!--a ो DEVANAGARI VOWEL SIGN O-->
            <Key
                latin:keySpec="&#x094B;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--s े DEVANAGARI VOWEL SIGN E-->
            <Key
                latin:keySpec="&#x0947;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--d ् DEVANAGARI SIGN VIRAMA-->
            <Key
                latin:keySpec="&#x094D;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--f ि DEVANAGARI VOWEL SIGN I-->
            <Key
                latin:keySpec="&#x093F;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--g ु DEVANAGARI VOWEL SIGN U-->
            <Key
                latin:keySpec="&#x0941;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--h प DEVANAGARI LETTER PA-->
            <Key
                latin:keySpec="&#x092A;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--j र DEVANAGARI LETTER RA-->
            <Key
                latin:keySpec="&#x0930;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--k क DEVANAGARI LETTER KA-->
            <Key
                latin:keySpec="&#x0915;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--l त DEVANAGARI LETTER TA-->
            <Key
                latin:keySpec="&#x0924;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--\; च DEVANAGARI LETTER CA-->
            <Key
                latin:keySpec="&#x091A;"
                latin:moreKeys=";"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <!--' ठ DEVANAGARI LETTER TTHA-->
            <Key
                latin:keySpec="&#x091F;"
                latin:moreKeys="'"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
         </default>
    </switch>
</merge>
