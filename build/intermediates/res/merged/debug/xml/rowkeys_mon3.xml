<merge xmlns:latin="http://schemas.android.com/apk/res-auto">
    <switch>
        <case latin:keyboardLayoutSetElement="alphabetManualShifted|alphabetShiftLocked|alphabetShiftLockShifted" >
            <Key
                latin:keySpec="&#x103F;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <Key
                latin:keySpec="&#x1023;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <Key
                latin:keySpec="&#x1020;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <Key
                latin:keySpec="&#x1003;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <Key
                latin:keySpec="&#x1028;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <Key
                latin:keySpec="&#x105D;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <Key
                latin:keySpec="&#x100E;"
                latin:keyLabelFlags="fontNormal" />

            <Key
                latin:keySpec="&#x1027;"
                latin:keyLabelFlags="fontNormal" />

            <Key
                latin:keySpec="&#x1007;"
                latin:keyLabelFlags="fontNormal" />

            <Key
                latin:keySpec="\?"
                latin:keyLabelFlags="fontNormal" />
        </case>
        <default>
            <Key
                latin:keySpec="&#x1012;"
                latin:keyLabelFlags="fontNormal" />

            <Key
                latin:keySpec="&#x1001;"
                latin:keyLabelFlags="fontNormal" />

            <Key
                latin:keySpec="&#x1005;"
                latin:keyLabelFlags="fontNormal" />

            <Key
                latin:keySpec="&#x100D;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <Key
                latin:keySpec="&#x101F;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />

            <Key
                latin:keySpec="&#x101D;"
                latin:keyLabelFlags="fontNormal" />

            <Key
                latin:keySpec="&#x1017;"
                latin:keyLabelFlags="fontNormal" />

            <Key
                latin:keySpec="&#x100F;"
                latin:keyLabelFlags="fontNormal" />

            <Key
                latin:keySpec="&#x104A;"
                latin:keyLabelFlags="fontNormal" />

            <Key
                latin:keySpec="&#x104B;"
                latin:keyLabelFlags="fontNormal" />
        </default>
    </switch>
</merge>
