<merge
    xmlns:latin="http://schemas.android.com/apk/res-auto"
 >
    <switch>
        <case
            latin:keyboardLayoutSetElement="alphabetManualShifted|alphabetShiftLocked|alphabetShiftLockShifted"
            >
            <!-- MYANMAR LETTER JA -->
             <Key
                latin:keySpec="&#x1007;"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER TTHA -->
             <Key
                latin:keySpec="&#x100C;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!-- MYANMAR LETTER GHA -->
             <Key
                latin:keySpec="&#x1003;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!-- MYANMAR LETTER LLA
                 MYANMAR LETTER VOCALIC LL -->
             <Key
                latin:keySpec="&#x1020;"
                latin:moreKeys="&#x1055;"
                latin:keyHintLabel="&#x1055;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!-- MYANMAR LETTER YA -->
             <Key
                latin:keySpec="&#x101A;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!-- MYANMAR LETTER NYA -->
             <Key
                latin:keySpec="&#x1009;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!-- MYANMAR LETTER UUA -->
             <Key
                latin:keySpec="&#x1026;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!-- MYANMAR SIGN LITTLE SECTION -->
             <Key
                latin:keySpec="&#x104A;"
                latin:keyLabelFlags="fontNormal" />
        </case>
        <default>
            <!-- MYANMAR LETTER PHA -->
             <Key
                latin:keySpec="&#x1016;"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER THA -->
             <Key
                latin:keySpec="&#x1011;"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER KHA -->
             <Key
                latin:keySpec="&#x1001;"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER LA
                 MYANMAR LETTER VOCALIC L -->
             <Key
                latin:keySpec="&#x101C;"
                latin:moreKeys="&#x1054;"
                latin:keyHintLabel="&#x1054;"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER BHA -->
             <Key
                latin:keySpec="&#x1018;"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR LETTER NNYA -->
             <Key
                latin:keySpec="&#x100A;"
                latin:keyLabelFlags="fontNormal|followKeyLetterRatio" />
            <!-- MYANMAR VOWEL SIGN AA -->
             <Key
                latin:keySpec="&#x102C;"
                latin:keyLabelFlags="fontNormal" />
            <!-- MYANMAR SIGN SECTION -->
             <Key
                latin:keySpec="&#x104B;"
                latin:keyLabelFlags="fontNormal" />
        </default>
    </switch>
</merge>
