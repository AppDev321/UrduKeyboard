<merge
    xmlns:latin="http://schemas.android.com/apk/res-auto"
 >
    <switch>
        <case
            latin:keyboardLayoutSetElement="alphabetManualShifted|alphabetShiftLocked|alphabetShiftLockShifted"
            >
            <!--A ਅ GURMUKHI LETTER A-->
            <Key
                latin:keySpec="&#x0A05;"
                latin:keyLabelFlags="fontNormal" />

            <!--S ਸ਼ GURMUKHI LETTER SHA-->
            <Key
                latin:keySpec="&#x0A36;"
                latin:keyLabelFlags="fontNormal" />

            <!--D ਧ GURMUKHI LETTER DHA-->
            <Key
                latin:keySpec="&#x0A27;"
                latin:keyLabelFlags="fontNormal" />

            <!--F ਢ GURMUKHI LETTER DDHA-->
            <Key
                latin:keySpec="&#x0A22;"
                latin:keyLabelFlags="fontNormal" />

            <!--G ਘ GURMUKHI LETTER GHA-->
            <Key
                latin:keySpec="&#x0A18;"
                latin:keyLabelFlags="fontNormal" />

            <!--H ੍ਹ  -->
            <Key
                latin:keySpec="&#x0A4D;"
                latin:keyLabelFlags="fontNormal" />

            <!--J ਝ GURMUKHI LETTER JHA-->
            <Key
                latin:keySpec="&#x0A1D;"
                latin:keyLabelFlags="fontNormal" />

            <!--K ਖ GURMUKHI LETTER KHA-->
            <Key
                latin:keySpec="&#x0A16;"
                latin:keyLabelFlags="fontNormal" />

            <!--L ਲ਼ GURMUKHI LETTER LLA-->
            <Key
                latin:keySpec="&#x0A33;"
                latin:keyLabelFlags="fontNormal" />
        </case>

        <default>
            <!--a ੳ GURMUKHI URA-->
            <Key
                latin:keySpec="&#x0A73;"
                latin:keyLabelFlags="fontNormal" />

            <!--s ਸ GURMUKHI LETTER SA-->
            <Key
                latin:keySpec="&#x0A38;"
                latin:keyLabelFlags="fontNormal" />

            <!--d ਦ GURMUKHI LETTER DA-->
            <Key
                latin:keySpec="&#x0A26;"
                latin:keyLabelFlags="fontNormal" />

            <!--f ਡ GURMUKHI LETTER DDA-->
            <Key
                latin:keySpec="&#x0A21;"
                latin:keyLabelFlags="fontNormal" />

            <!--g ਗ GURMUKHI LETTER GA-->
            <Key
                latin:keySpec="&#x0A17;"
                latin:moreKeys="&#x0A19;"
                latin:keyHintLabel="&#x0A19;"
                latin:keyLabelFlags="fontNormal" />

            <!--h ਹ GURMUKHI LETTER HA-->
            <Key
                latin:keySpec="&#x0A39;"
                latin:keyLabelFlags="fontNormal" />

            <!--j ਜ GURMUKHI LETTER JA-->
            <Key
                latin:keySpec="&#x0A1C;"
                latin:keyLabelFlags="fontNormal" />

            <!--k ਕ GURMUKHI LETTER KA-->
            <Key
                latin:keySpec="&#x0A15;"
                latin:keyLabelFlags="fontNormal" />

            <!--l ਲ GURMUKHI LETTER LA-->
            <Key
                latin:keySpec="&#x0A32;"
                latin:keyLabelFlags="fontNormal" />
        </default>
    </switch>
</merge>
